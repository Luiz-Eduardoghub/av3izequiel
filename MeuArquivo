public class MeuArquivo {
    private String nomeArquivo;
    private String conteudoArquivo;

    public MeuArquivo(String nomeArquivo) {
        this.nomeArquivo = nomeArquivo;
        this.conteudoArquivo = "";
    }

    public String getNomeArquivo() {
        return nomeArquivo;
    }

    public void setNomeArquivo(String novoNomeArquivo) {
        this.nomeArquivo = novoNomeArquivo;
    }

    public String getConteudoArquivo() {
        return conteudoArquivo;
    }

    public void setConteudoArquivo(String conteudo) {
        this.conteudoArquivo = conteudo;
    }
}
